rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // COLECÇÃO: anuncios (Dados Públicos)
    // ============================================
    match /anuncios/{anuncioId} {
      // Leitura: Público (qualquer um pode ler)
      allow read: if true;
      
      // Criação: Apenas usuários autenticados
      allow create: if request.auth != null;
      
      // Atualização: Qualquer usuário autenticado (para views/likes)
      allow update: if request.auth != null;
      
      // Exclusão: Apenas o dono do anúncio ou admin
      allow delete: if request.auth != null && 
                       (request.auth.uid == resource.data.userId ||
                        request.auth.token.admin == true);
    }
    
    // ============================================
    // COLECÇÃO: privateAdvertiserData (Dados Sensíveis)
    // ============================================
    match /privateAdvertiserData/{userId} {
      allow read: if request.auth != null && 
                     (request.auth.uid == userId ||
                      request.auth.token.admin == true);
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && 
                       (request.auth.uid == userId ||
                        request.auth.token.admin == true);
      allow delete: if request.auth != null && 
                       (request.auth.uid == userId ||
                        request.auth.token.admin == true);
    }
    
    // ============================================
    // COLECÇÃO: advertisements (Legado - Compatibilidade)
    // ============================================
    match /advertisements/{advertisementId} {
      // Leitura: Público
      allow read: if true;
      
      allow create: if request.auth != null;
      // Atualização: Qualquer usuário autenticado (para views/likes)
      allow update: if request.auth != null;
      allow delete: if request.auth != null && 
                       (request.auth.uid == resource.data.userId ||
                        request.auth.token.admin == true);
    }
    
    // ============================================
    // COLECÇÃO: advertisers (Cadastro de Anunciantes)
    // ============================================
    match /advertisers/{advertiserId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == advertiserId;
      allow update: if request.auth != null && 
                       (request.auth.uid == advertiserId ||
                        request.auth.token.admin == true);
      allow delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: comentarios
    // ============================================
    match /comentarios/{comentarioId} {
      // Leitura: Público (para mostrar comentários aprovados)
      allow read: if true;
      
      // Criação: Qualquer usuário autenticado pode comentar
      allow create: if request.auth != null;
      
      // Atualização: Qualquer usuário autenticado (para aprovar/rejeitar)
      allow update: if request.auth != null;
      
      // Exclusão: Qualquer usuário autenticado (dono do anúncio pode deletar)
      allow delete: if request.auth != null;
    }
    
    // ============================================
    // COLECÇÃO: anuncio_stats (Estatísticas)
    // ============================================
    match /anuncio_stats/{statId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: photo_likes (Likes em fotos)
    // ============================================
    match /photo_likes/{likeId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // ============================================
    // COLECÇÃO: likes (Likes gerais)
    // ============================================
    match /likes/{likeId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // ============================================
    // COLECÇÃO: photo_views (Visualizações de fotos)
    // ============================================
    match /photo_views/{viewId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: users
    // ============================================
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: payments
    // ============================================
    match /payments/{paymentId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: invoices
    // ============================================
    match /invoices/{invoiceId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: clientes (Usuários cadastrados como clientes)
    // ============================================
    match /clientes/{clienteId} {
      // Clientes podem ler apenas seus próprios dados
      allow read: if request.auth != null && request.auth.uid == clienteId;
      // Clientes podem criar/atualizar apenas seus próprios dados
      allow create: if request.auth != null && request.auth.uid == clienteId;
      allow update: if request.auth != null && request.auth.uid == clienteId;
      // Não permitir exclusão
      allow delete: if false;
    }
    
    // ============================================
    // OUTRAS COLECÇÕES - Negar acesso padrão
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
