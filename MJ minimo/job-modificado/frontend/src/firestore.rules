rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // COLECÇÃO: anuncios (Dados Públicos)
    // MODERAÇÃO: Usuário não pode alterar campo status
    // ============================================
    match /anuncios/{anuncioId} {
      // Leitura: Público
      allow read: if true;
      
      // Criação: usuário autenticado, status DEVE ser "pending_approval"
      allow create: if request.auth != null
                    && request.resource.data.status == 'pending_approval';
      
      // Atualização:
      // - Admin pode alterar tudo (incluindo status para aprovar/rejeitar)
      // - Qualquer autenticado pode atualizar (views, likes) mas NÃO pode mudar status
      allow update: if request.auth != null
                    && (
                      request.auth.token.admin == true
                      ||
                      request.resource.data.status == resource.data.status
                    );
      
      // Exclusão: apenas dono ou admin
      allow delete: if request.auth != null && 
                       (request.auth.uid == resource.data.userId ||
                        request.auth.uid == resource.data.advertiserId ||
                        request.auth.token.admin == true);
    }
    
    // ============================================
    // COLECÇÃO: privateAdvertiserData (Dados Sensíveis)
    // ============================================
    match /privateAdvertiserData/{userId} {
      allow read: if request.auth != null && 
                     (request.auth.uid == userId ||
                      request.auth.token.admin == true);
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && 
                       (request.auth.uid == userId ||
                        request.auth.token.admin == true);
      allow delete: if request.auth != null && 
                       (request.auth.uid == userId ||
                        request.auth.token.admin == true);
    }
    
    // ============================================
    // COLECÇÃO: advertisements (Legado - Compatibilidade)
    // MODERAÇÃO: Usuário não pode alterar campo status
    // ============================================
    match /advertisements/{advertisementId} {
      // Leitura: Público
      allow read: if true;
      
      // Criação: usuário autenticado, status DEVE ser "pending_approval"
      allow create: if request.auth != null
                    && request.resource.data.status == 'pending_approval';
      
      // Atualização:
      // - Admin pode alterar tudo (incluindo status para aprovar/rejeitar)
      // - Qualquer autenticado pode atualizar (views, likes) mas NÃO pode mudar status
      allow update: if request.auth != null
                    && (
                      request.auth.token.admin == true
                      ||
                      request.resource.data.status == resource.data.status
                    );
      
      // Exclusão: apenas dono ou admin
      allow delete: if request.auth != null 
                    && (request.auth.uid == resource.data.advertiserId 
                        || request.auth.token.admin == true);
    }
    
    // ============================================
    // COLECÇÃO: advertisers (Cadastro de Anunciantes)
    // ============================================
    match /advertisers/{advertiserId} {
      // Leitura: qualquer usuário autenticado (para verificar CPF, role admin, etc.)
      allow read: if request.auth != null;
      
      // Criação: apenas para o próprio usuário
      allow create: if request.auth != null && request.auth.uid == advertiserId;
      
      // Atualização: próprio documento OU admin
      allow update: if request.auth != null 
                    && (request.auth.uid == advertiserId 
                        || request.auth.token.admin == true);
      
      // Não permitir exclusão
      allow delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: comentarios
    // ============================================
    match /comentarios/{comentarioId} {
      // Leitura: Público (para mostrar comentários aprovados)
      allow read: if true;
      
      // Criação: Qualquer usuário autenticado pode comentar
      allow create: if request.auth != null;
      
      // Atualização: Qualquer usuário autenticado (para aprovar/rejeitar)
      allow update: if request.auth != null;
      
      // Exclusão: Qualquer usuário autenticado (dono do anúncio pode deletar)
      allow delete: if request.auth != null;
    }
    
    // ============================================
    // COLECÇÃO: anuncio_stats (Estatísticas)
    // ============================================
    match /anuncio_stats/{statId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: photo_likes (Likes em fotos)
    // ============================================
    match /photo_likes/{likeId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // ============================================
    // COLECÇÃO: likes (Likes gerais)
    // ============================================
    match /likes/{likeId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // ============================================
    // COLECÇÃO: photo_views (Visualizações de fotos)
    // ============================================
    match /photo_views/{viewId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: users
    // ============================================
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: payments
    // ============================================
    match /payments/{paymentId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: invoices
    // ============================================
    match /invoices/{invoiceId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: clientes (Usuários cadastrados como clientes)
    // ============================================
    match /clientes/{clienteId} {
      allow read: if request.auth != null && request.auth.uid == clienteId;
      allow create: if request.auth != null && request.auth.uid == clienteId;
      allow update: if request.auth != null && request.auth.uid == clienteId;
      allow delete: if false;
    }
    
    // ============================================
    // OUTRAS COLECÇÕES - Negar acesso padrão
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
