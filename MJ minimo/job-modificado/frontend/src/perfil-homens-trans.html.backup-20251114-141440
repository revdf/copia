// Fun√ß√£o original para carregar perfis do MongoDB (mantida para refer√™ncia)
async function loadProfilesFromMongoDB() {
  try {
    console.log("üîÑ Carregando perfis do Firebase...");
    
    // Mostrar indicador de carregamento
    showDataSourceIndicator("Carregando dados do Firebase...", "loading");
    
    const apiBaseUrl = getApiBaseUrl();
    console.log("üîó Usando API base URL:", apiBaseUrl);
    
    // Buscar an√∫ncios premium do Firebase
    const response = await fetch(
      `${apiBaseUrl}/api/anuncios`
    );

    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }

    const result = await response.json();
    console.log("üìä Resposta da API:", result);

    // Ajustar para estrutura da API Firebase - array direto
    let advertisements = [];
    if (Array.isArray(result)) {
      advertisements = result;
    } else {
      advertisements = result.advertisements || result.data || [];
    }

    // Filtrar an√∫ncios para p√°gina Premium: N1+N3+N7 (mulher/premium)
    advertisements = advertisements.filter(ad => 
      (ad.categoria === 'premium' || ad.categoria === 'acompanhantes' || ad.category === 'premium') &&
      (ad.nivel === 'N1' || ad.nivel === 'N3' || ad.nivel === 'N7')
    );
    
    console.log(`‚úÖ ${advertisements.length} an√∫ncios (N1+N3+N7) para Premium encontrados no Firebase`);

    // Converter dados do Firebase para formato da p√°gina
    PROFILES_DATA = advertisements.map((ad, index) => {
      // Determinar a imagem principal
      const mainImage = 
        ad.foto_capa_url ||           // URL assinada do Firebase (prioridade)
        ad.foto_capa ||               // Foto de capa do Firebase (fallback)
        ad.coverImage ||              // Cover image alternativa
        ad.fotoPerfil ||              // Foto de perfil do Firebase
        ad.mediaFiles?.foto_capa ||   // Foto de capa do Firebase
        ad.mediaFiles?.galeria?.[0] || // Primeira foto da galeria
        "https://via.placeholder.com/300x400/FFB6C1/FFFFFF?text=Sem+Imagem";

      // Usar n√≠vel real do banco de dados
      let level = ad.nivel || "N7 - Padr√£o";
      let info = "15h √†s 01h";
      
      if (ad.nivel === 'N1') {
        level = "N1 - Premium VIP";
        info = "24h";
      } else if (ad.nivel === 'N3') {
        level = "N3 - Destaque";
        info = "14h √†s 00h";
      } else if (ad.nivel === 'N7') {
        level = "N7 - Padr√£o";
        info = "15h √†s 01h";
      }

      // Trocar fotos da Catarina e Bianca
      let finalImage = mainImage;
      const nome = ad.nome || ad.title || `Perfil ${index + 1}`;
      
      if (nome.toLowerCase().includes('catarina')) {
        // Catarina recebe a foto da Bianca
        finalImage = "https://storage.googleapis.com/copia-do-job.firebasestorage.app/Stories.jpg?GoogleAccessId=firebase-adminsdk-fbsvc%40copia-do-job.iam.gserviceaccount.com&Expires=1760733848&Signature=Rd3MzTpUAsEdusssNY%2BOdoOoE0QDD6nnHhRVDybnUfsCb5%2BvJDbOxRAi02YU6qm%2FPloGWO6tPvLkjoFEXrH9w6zM5jmKop5d4cg0acCFv5sXz8%2FDn94yQvfbHnu%2BvUEttD9znxZXe5yi2wuH3k94e8fQZOI8YHg%2FgTzXAXlTfLp6otTxEmO6Tuhq5ZnVm3FmNAWCmg%2FUI6G1a3a%2BOne5UWatqhqCh09x3anoYQCloIrGq5pl3IaTKhw8NhFN1Cv%2BwZ9QhSOjlgS69x2bvYVZgNbHfXbj0fZJpJ5W%2BrlbJ9z0ot9ZgR8gf%2FoKtUO%2FH1AOEUtHwvZ2UGtoh6rmmrZsJQ%3D%3D";
      } else if (nome.toLowerCase().includes('bianca')) {
        // Bianca recebe a foto da Catarina
        finalImage = "https://storage.googleapis.com/copia-do-job.firebasestorage.app/foto%20%284%29.jpg?GoogleAccessId=firebase-adminsdk-fbsvc%40copia-do-job.iam.gserviceaccount.com&Expires=1760733848&Signature=placeholder";
      }
      
      // Trocar foto da Elo√° por avatar (3).jpg
      if (nome.toLowerCase().includes('elo√°') || nome.toLowerCase().includes('eloa')) {
        // Elo√° recebe avatar (3).jpg
        finalImage = "https://storage.googleapis.com/copia-do-job.firebasestorage.app/avatar%20%283%29.jpg?GoogleAccessId=firebase-adminsdk-fbsvc%40copia-do-job.iam.gserviceaccount.com&Expires=1760740112&Signature=RbXeAO6O8ySW1avMNkR6toTUM80%2FS3JprOPPUygNaqphKXbfQvkLs27mrYlSpay0mRccR1ATahegSJGKY7RdOWNTrlacAQZQWw%2F%2FpUFv5%2F74Kt8VTvddfT0%2BBrhZOVd6GWIbI1dxbI1aLXNqkKmB2pOTw29iLRtLutjeoj5M74Zw6HB%2BeRG58K37%2FoxrymvaxgXf2R8wSpGyQY5%2BDeBzb6AfJXnFieRiyw3UfoxfmYifwsZ4c24sp4c466nnc40eow9eM5w8yYvSN3gcbeJsDbYSztxlfiddNF3AuJ3wdoaallO5BqbO9aZXRz1MDBZJaGLF63Iq8WtbZd%2F4i8pexw%3D%3D";
      }
      
      // Detectar fotos em paisagem (landscape) que precisam de object-fit: cover
      // Fotos conhecidas em paisagem que causam problemas no layout
      const fotosLandscape = [
        'foto (26).jpg',  // Laura (N3) - foto em paisagem
        'foto (30).jpg',  // Helo√≠sa (N7) - foto em paisagem
        'foto (24).jpg',  // L√≠via (N7) - foto em paisagem
        'foto (19).jpg',  // Beatriz (N3) - foto em paisagem
        'foto (13).jpg',  // Foto em paisagem
        'foto (8).jpg'    // Foto em paisagem
      ];
      
      // Verificar se a foto atual √© em paisagem
      const isLandscape = fotosLandscape.some(foto => finalImage.includes(foto));
      
      // Adicionar classe CSS para fotos em paisagem
      if (isLandscape) {
        // Para fotos em paisagem, vamos usar object-fit: cover
        // Isso ser√° aplicado via CSS baseado na classe
        finalImage += '|landscape'; // Marcador para CSS
      }

      return {
        id: ad._id || ad.id || index + 1,
        name: nome,
        phrase: ad.descricao || ad.description || "Descri√ß√£o n√£o dispon√≠vel",
        image: finalImage,
        info: `${level} | ${info}`,
        // Dados adicionais do Firebase
        originalData: ad,
        cidade: ad.cidade || "N√£o informado",
        estado: ad.estado || "N√£o informado",
        preco_1h: ad.preco_1h || "Sob consulta",
        status: ad.status || "Ativo",
        // Campos para stories
        foto_stories: ad.foto_stories,
        nivel: ad.nivel,
        destaque: ad.destaque,
        premium: ad.premium
      };
    });

    console.log(`‚úÖ ${PROFILES_DATA.length} perfis carregados do Firebase`);
    
    // Mostrar indicador de sucesso
    showDataSourceIndicator(`‚úÖ ${PROFILES_DATA.length} perfis carregados do Firebase`, "success");
    
    return PROFILES_DATA;

  } catch (error) {
    console.error("‚ùå Erro ao carregar perfis do Firebase:", error);
    
    // Mostrar indicador de erro - SEM FALLBACK
    showDataSourceIndicator("‚ùå Erro ao carregar dados. Verifique se o backend est√° rodando.", "error");
    
    // N√ÉO usar dados de exemplo - apenas dados reais
    console.log("üö´ Modo dados reais ativo - sem fallback para dados de exemplo");
    
    
    // Mostrar mensagem de erro na interface
    showErrorMessage("Sistema indispon√≠vel. Verifique se o backend est√° rodando na porta 5001.");
    
    return PROFILES_DATA;
  }
}

// --- VARI√ÅVEIS DE DOM ---
const bubbleContainer = document.getElementById('bubble-container');
const galleryGrid = document.getElementById('gallery-grid');
const layoutSwitcherBar = document.getElementById('layout-switcher-bar');
const layoutIcons = document.querySelectorAll('#layout_anuncios .layout-icon');
const galleryTitle = document.getElementById('gallery-title');

// Vari√°veis de estado
let isBubbleMode = false;
let isMobileDevice = window.innerWidth <= 768;
let activeBubbles = [];
let bubbleMotionLoop = null;
let currentProfileImages = [];

// Vari√°veis para arrastar bolhas
let draggedBubble = null;
let isDragging = false;
let dragOffset = { x: 0, y: 0 };
let lastMousePos = { x: 0, y: 0 };
let hasMoved = false;

// --- FUN√á√ïES DE LAYOUTS E GERA√á√ÉO DE CARDS ---

// 1. Gera os cards para um N√≠vel e perfis espec√≠ficos
function generateGridCards(level, profiles) {
  let html = '';
  profiles.forEach(profile => {
    let cardContent;
    if (level === 'n1') {
      // Layout N1: Full Width Article (Destaque)
      cardContent = `
        <article>
          <div class="card-image-wrapper">
            <img loading="lazy" src="${profile.image}" alt="${profile.name}" class="card-image">
          </div>
          <div class="card-info">
            <h3 class="card-name">${profile.name}</h3>
            <p class="px-item-localhorario">${profile.info}</p>
            <p class="card-phrase">${profile.phrase}</p>
          </div>
        </article>
      `;
    } else {
      // Layouts N2, N3 e N7 (Grid/Lista)
      // Detectar se √© foto em paisagem
      const isLandscape = profile.image.includes('|landscape');
      const imageUrl = profile.image.replace('|landscape', '');
      const landscapeClass = isLandscape ? 'landscape-photo' : '';
      
      // Layout especial para N3 - nome sobreposto na foto
      if (level === 'n3') {
        cardContent = `
          <div class="card-image-wrapper n3-full-image">
            <img src="${imageUrl}" alt="${profile.name}" class="card-image ${landscapeClass}">
            <div class="card-name-overlay">
              <h3 class="card-name">${profile.name}</h3>
            </div>
          </div>
        `;
      } else {
        // Layout normal para N2 e N7
        if (level === 'n7') {
          // Layout N7 - foto no topo, dados na base
          cardContent = `
            <div class="card-image-wrapper n7-top">
              <img src="${imageUrl}" alt="${profile.name}" class="card-image ${landscapeClass}">
            </div>
            <div class="card-info n7-bottom">
              <h3 class="card-name">${profile.name}</h3>
              <p class="card-phrase">${profile.phrase}</p>
            </div>
          `;
        } else {
          // Layout N2 - layout padr√£o
          cardContent = `
            <div class="card-image-wrapper">
              <img src="${imageUrl}" alt="${profile.name}" class="card-image ${landscapeClass}">
            </div>
            <div class="card-info">
              <h3 class="card-name">${profile.name}</h3>
              <p class="card-phrase">${profile.phrase}</p>
            </div>
          `;
        }
      }
    }
   
    // Criar link para p√°gina de perfil com par√¢metros
    const profileUrl = `A_02__premium_Anuncio_modelo_01.html?id=${profile.originalData?.id || profile.id}&name=${encodeURIComponent(profile.name)}`;
    html += `<a href="${profileUrl}" class="acompanhante-card">${cardContent}</a>`;
  });
  return html;
}

// 2. Modo: Tiered Grid (Desktop)
function generateTieredGrid() {
  const premium = PROFILES_DATA.slice(0, 36); // N1 (36 perfis - 6 linhas x 6 colunas)
  const featured = PROFILES_DATA.slice(36, 48); // N3 (12 perfis: 5 originais + 7 novos)
  const standard = PROFILES_DATA.slice(48); // N7 (resto dos perfis)
 
  galleryGrid.innerHTML = '';
 
  // N√çVEL 3 (Featured) - FILA CIRCULAR (PRIMEIRO)
  const n3Title = document.createElement('h3');
  n3Title.className = 'section-title';
  n3Title.textContent = '‚≠ê N3 - Destaque';
  n3Title.style.cssText = 'color: #e25352; font-size: 1.5rem; margin: 2rem 0 1rem 0; text-align: center; font-weight: bold;';
  galleryGrid.appendChild(n3Title);
  
  // Aplicar rota√ß√£o circular no N3
  const rotatedFeatured = rotateCircularQueue(featured);
  
  const n3Container = document.createElement('div');
  n3Container.className = 'gallery-grid layout-n3';
  n3Container.innerHTML = generateGridCards('n3', rotatedFeatured);
  galleryGrid.appendChild(n3Container);

  // N√çVEL 1 (Premium) - GRADE 6x6 (SEGUNDO)
  const n1Title = document.createElement('h3');
  n1Title.className = 'section-title';
  n1Title.textContent = 'üåü N1 - Premium VIP';
  n1Title.style.cssText = 'color: #e25352; font-size: 1.5rem; margin: 2rem 0 1rem 0; text-align: center; font-weight: bold;';
  galleryGrid.appendChild(n1Title);
  
  const n1Container = document.createElement('div');
  n1Container.className = 'gallery-grid layout-n1-grid';
  n1Container.style.cssText = 'display: grid; grid-template-columns: repeat(6, 1fr); gap: 1rem; margin: 2rem 0;';
  n1Container.innerHTML = generateGridCards('n1', premium);
  galleryGrid.appendChild(n1Container);
 
  // N√çVEL 7 (Standard)
  const n7Title = document.createElement('h3');
  n7Title.className = 'section-title';
  n7Title.textContent = 'üìã N7 - Padr√£o';
  n7Title.style.cssText = 'color: #e25352; font-size: 1.5rem; margin: 2rem 0 1rem 0; text-align: center; font-weight: bold;';
  galleryGrid.appendChild(n7Title);
  
  const n7Container = document.createElement('div');
  n7Container.className = 'gallery-grid layout-n7';
  n7Container.innerHTML = generateGridCards('n7', standard);
  galleryGrid.appendChild(n7Container);
 
  // Ajusta o cont√™iner principal para Flex/Block
  galleryGrid.style.display = 'block';
  galleryGrid.className = ''; // Remove todas as classes de layout
  
  // Inicializar Swiper ap√≥s adicionar ao DOM
  setTimeout(() => {
    initPremiumSwiper();
  }, 100);
}

// Fun√ß√£o para inicializar o Swiper Premium
function initPremiumSwiper() {
  if (typeof Swiper === 'undefined') {
    console.warn('Swiper n√£o carregado. Carregando...');
    loadSwiperLibrary();
    return;
  }
  
  // === EMBARALHAR SLIDES ANTES DE INICIALIZAR ===
  const wrapper = document.querySelector(".premium-swiper .swiper-wrapper");
  if (wrapper) {
    const slides = Array.from(wrapper.children);
    
    // Embaralha os elementos (Fisher-Yates shuffle)
    for (let i = slides.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [slides[i], slides[j]] = [slides[j], slides[i]];
    }

    // Remove os slides atuais e reinsere na nova ordem
    slides.forEach(slide => wrapper.appendChild(slide));
    console.log('üé≤ Slides embaralhados aleatoriamente!');
  }
  
  // === INICIALIZA√á√ÉO DO SWIPER ===
  const swiper = new Swiper('.premium-swiper', {
    slidesPerView: 6,
    spaceBetween: 15,
    loop: true,
    centeredSlides: false,
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    breakpoints: {
      1024: { slidesPerView: 6 },
      768: { slidesPerView: 4 },
      480: { slidesPerView: 2 },
    },
  });
  
  console.log('‚úÖ Swiper Premium (Elementor Style) inicializado com sucesso!');
}

// Fun√ß√£o para rota√ß√£o circular da fila N3
function rotateCircularQueue(profiles) {
  if (!profiles || profiles.length === 0) return profiles;
  
  // Obter ou criar contador de rota√ß√£o no localStorage
  const rotationKey = 'n3_rotation_counter';
  let rotationCount = parseInt(localStorage.getItem(rotationKey)) || 0;
  
  // Incrementar contador
  rotationCount++;
  localStorage.setItem(rotationKey, rotationCount.toString());
  
  // Calcular posi√ß√£o de in√≠cio da rota√ß√£o
  const startIndex = rotationCount % profiles.length;
  
  // Rotacionar array
  const rotated = [
    ...profiles.slice(startIndex),
    ...profiles.slice(0, startIndex)
  ];
  
  console.log(`üîÑ N3 Fila Circular: Rota√ß√£o ${rotationCount}, In√≠cio: ${startIndex}`);
  console.log(`üìã Ordem atual: ${rotated.map(p => p.name).join(' ‚Üí ')}`);
  
  return rotated;
}

// Fun√ß√£o para carregar a biblioteca Swiper
function loadSwiperLibrary() {
  // CSS do Swiper
  const swiperCSS = document.createElement('link');
  swiperCSS.rel = 'stylesheet';
  swiperCSS.href = 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css';
  document.head.appendChild(swiperCSS);
  
  // JS do Swiper
  const swiperJS = document.createElement('script');
  swiperJS.src = 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js';
  swiperJS.onload = () => {
    console.log('‚úÖ Swiper carregado! Inicializando...');
    setTimeout(() => {
      initPremiumSwiper();
    }, 100);
  };
  document.head.appendChild(swiperJS);
}

// 3. Modo: Manual Grid (Mobile)
function handleManualLayoutSwitch(level) {
  galleryGrid.innerHTML = '';
  const allCards = generateGridCards(level, PROFILES_DATA);
 
  galleryGrid.classList.remove('layout-n1', 'layout-n2', 'layout-n3', 'layout-n7');
  galleryGrid.classList.add(`layout-${level}`);
  galleryGrid.style.display = 'grid';
  galleryGrid.innerHTML = allCards;
 
  galleryTitle.textContent = `Acompanhantes em Destaque (N√≠vel ${level.toUpperCase()})`;
}

// 4. Modo: Alternar para Bolhas
function toggleBubbleMode() {
  isBubbleMode = !isBubbleMode;
  const storiesSection = document.querySelector('.stories-section');
  const categoriesContainer = document.querySelector('.categories-container');
  const layoutSwitcherBar = document.getElementById('layout-switcher-bar');
 
  if (isBubbleMode) {
    // Mostrar apenas bolhas e cabe√ßalho
    bubbleContainer.style.display = 'block';
    galleryGrid.style.display = 'none';
    if (storiesSection) {
      storiesSection.style.display = 'none';
    }
    if (categoriesContainer) {
      categoriesContainer.classList.add('hidden');
    }
    if (layoutSwitcherBar) {
      layoutSwitcherBar.style.display = 'none';
    }
    galleryTitle.textContent = 'Acompanhantes em Destaque (Modo Bolhas)';
    generateBubbles();
    initMotion();
  } else {
    // Voltar ao modo normal
    bubbleContainer.style.display = 'none';
    if (storiesSection) {
      storiesSection.style.display = 'block';
    }
    if (categoriesContainer) {
      // CORRE√á√ÉO: Verificar se n√£o est√° em modo transparente antes de mostrar
      const isMobile = window.innerWidth <= 1024;
      const mainHeader = document.querySelector('.main-header');
      const isHeaderTransparent = mainHeader && mainHeader.classList.contains('scrolled');
      
      if (!(isMobile && isHeaderTransparent)) {
        categoriesContainer.classList.remove('hidden');
      }
    }
    renderGallery();
    stopMotion();
  }
}

// 5. Fun√ß√£o de renderiza√ß√£o principal
function renderGallery() {
  isMobileDevice = window.innerWidth <= 768;
  const storiesSection = document.querySelector('.stories-section');
  const categoriesContainer = document.querySelector('.categories-container');

  // Garantir que elementos estejam vis√≠veis no modo galeria
  if (storiesSection && !isBubbleMode) {
    storiesSection.style.display = 'block';
  }
  if (categoriesContainer && !isBubbleMode) {
    // CORRE√á√ÉO: Verificar se n√£o est√° em modo transparente antes de mostrar
    const isMobile = window.innerWidth <= 1024;
    const mainHeader = document.querySelector('.main-header');
    const isHeaderTransparent = mainHeader && mainHeader.classList.contains('scrolled');
    
    if (!(isMobile && isHeaderTransparent)) {
      categoriesContainer.classList.remove('hidden');
    }
  }

  if (isMobileDevice) {
    // MOBILE: Visibilidade da barra, in√≠cio em N7, controle manual
    layoutSwitcherBar.style.display = 'flex';
    handleManualLayoutSwitch('n7');
  } else {
    // DESKTOP: Barra escondida, Tiered Grid, controle Bolhas/Grid
    layoutSwitcherBar.style.display = 'none';
    generateTieredGrid();
  }
}

// --- FUN√á√ïES DE EVENTOS ---

// 1. Scroll-Hide da Barra
let lastScrollTop = 0;
window.addEventListener('scroll', function() {
  if (window.innerWidth <= 768) {
    const st = window.pageYOffset || document.documentElement.scrollTop;
    if (st > 120) {
      if (st > lastScrollTop){
        layoutSwitcherBar.classList.add('hidden-on-scroll');
      } else {
        layoutSwitcherBar.classList.remove('hidden-on-scroll');
      }
    } else {
      layoutSwitcherBar.classList.remove('hidden-on-scroll');
    }
    lastScrollTop = st <= 0 ? 0 : st;
  }
}, false);

// 2. L√≥gica para mudar o Layout (Bot√µes da barra)
layoutIcons.forEach(icon => {
  icon.addEventListener('click', function() {
    if (window.innerWidth <= 768) {
      layoutIcons.forEach(i => i.classList.remove('active'));
      this.classList.add('active');
      isBubbleMode = false;
      bubbleContainer.style.display = 'none';
      handleManualLayoutSwitch(this.dataset.layout);
    }
  });
});

// 3. Evento para o bot√£o de alternar para o modo Bolhas (agora na barra de navega√ß√£o)

// --- FUN√á√ïES DE STORIES ---
function initStories() {
  try {
    console.log('üé† Inicializando stories...');
    const storiesWrapper = document.getElementById('stories-wrapper');
    
    if (!storiesWrapper) {
      console.error('‚ùå Elemento stories-wrapper n√£o encontrado');
      return;
    }
    
    // Filtrar an√∫ncios que t√™m foto_stories
    const anunciosComStories = PROFILES_DATA.filter(ad => ad.foto_stories);
    console.log(`üì∏ ${anunciosComStories.length} an√∫ncios com stories encontrados`);
    
    // Limpar stories existentes
    storiesWrapper.innerHTML = '';
    
    // Criar container para o carrossel
    const carouselContainer = document.createElement('div');
    carouselContainer.className = 'stories-carousel-container';
    carouselContainer.style.cssText = `
      display: flex;
      overflow: hidden;
      width: 100%;
      position: relative;
      cursor: grab;
      user-select: none;
    `;
    
    // Criar trilha de stories (duplicada para loop infinito)
    const storiesTrack = document.createElement('div');
    storiesTrack.className = 'stories-track';
    storiesTrack.style.cssText = `
      display: flex;
      transition: transform 0.3s ease;
      will-change: transform;
    `;
    
    // Fun√ß√£o para criar um story item
    function createStoryItem(ad, index) {
      const storyItem = document.createElement('div');
      storyItem.className = 'text-center story-item';
      storyItem.style.cssText = `
        flex: 0 0 80px;
        margin: 0 8px;
        cursor: pointer;
        transition: transform 0.2s ease;
      `;
      
      // Usar foto_stories se dispon√≠vel, sen√£o usar foto principal
      const storyImage = ad.foto_stories ? 
        `https://firebasestorage.googleapis.com/v0/b/copia-do-job.firebasestorage.app/o/${encodeURIComponent(ad.foto_stories)}?alt=media` : 
        ad.image;
      
      storyItem.innerHTML = `
        <div class="rounded-circle overflow-hidden story-ring border border-danger mx-auto" style="width: 60px; height: 60px;">
          <img src="${storyImage}" class="story-thumb img-fluid" alt="${ad.name}" 
               style="width: 100%; height: 100%; object-fit: cover;"
               onerror="this.src='${ad.image}'">
        </div>
        <div class="story-name mt-2" style="font-size: 12px; color: #333;">${ad.name.split(' ')[0]}</div>
      `;
      
      // Click no story
      storyItem.addEventListener('click', (e) => {
        e.preventDefault();
        console.log('Story clicado:', ad.name);
      });
      
      return storyItem;
    }
    
    // Adicionar stories (duplicar para loop infinito)
    const storiesToShow = anunciosComStories.slice(0, 20);
    console.log(`üìä Mostrando ${storiesToShow.length} stories`);
    
    // Primeira c√≥pia
    storiesToShow.forEach((ad, index) => {
      storiesTrack.appendChild(createStoryItem(ad, index));
    });
    
    // Segunda c√≥pia para loop infinito
    storiesToShow.forEach((ad, index) => {
      storiesTrack.appendChild(createStoryItem(ad, index + 20));
    });
    
    carouselContainer.appendChild(storiesTrack);
    storiesWrapper.appendChild(carouselContainer);
    
    console.log('‚úÖ Stories criados com sucesso');
    
    // Inicializar carrossel
    initStoriesCarousel(carouselContainer, storiesTrack, storiesToShow.length);
    
  } catch (error) {
    console.error('‚ùå Erro ao inicializar stories:', error);
  }
}

// Vari√°veis globais para o carrossel
let storiesCarousel = null;

function initStoriesCarousel(container, track, itemCount) {
  let currentIndex = 0;
  const itemWidth = 96; // 80px + 16px margin
  let animationId = null;
  let isPaused = false;
  let isDragging = false;
  let startX = 0;
  let scrollLeft = 0;
  
  // Fun√ß√£o para mover o carrossel (mais lenta e suave)
  function moveCarousel() {
    if (!isPaused && !isDragging) {
      currentIndex++;
      
      // Se chegou ao final, voltar ao in√≠cio
      if (currentIndex >= itemCount) {
        currentIndex = 0;
        // Resetar posi√ß√£o sem transi√ß√£o
        track.style.transition = 'none';
        track.style.transform = 'translateX(0px)';
        
        // For√ßar reflow
        track.offsetHeight;
        
        // Restaurar transi√ß√£o
        track.style.transition = 'transform 0.8s ease-in-out';
      } else {
        // Mover para o pr√≥ximo item com transi√ß√£o suave
        track.style.transition = 'transform 0.8s ease-in-out';
        const translateX = -currentIndex * itemWidth;
        track.style.transform = `translateX(${translateX}px)`;
      }
    }
    
    // Agendar pr√≥xima movimenta√ß√£o (mais lenta - 3 segundos)
    animationId = setTimeout(moveCarousel, 3000);
  }
  
  // Fun√ß√£o para pausar/retomar
  function pauseCarousel() {
    isPaused = true;
  }
  
  function resumeCarousel() {
    isPaused = false;
  }
  
  // Eventos de mouse
  container.addEventListener('mousedown', (e) => {
    isDragging = true;
    startX = e.pageX - container.offsetLeft;
    scrollLeft = currentIndex * itemWidth;
    pauseCarousel();
    container.style.cursor = 'grabbing';
  });
  
  container.addEventListener('mouseleave', () => {
    if (isDragging) {
      isDragging = false;
      resumeCarousel();
      container.style.cursor = 'grab';
    }
  });
  
  container.addEventListener('mouseup', () => {
    if (isDragging) {
      isDragging = false;
      resumeCarousel();
      container.style.cursor = 'grab';
    }
  });
  
  container.addEventListener('mousemove', (e) => {
    if (!isDragging) return;
    e.preventDefault();
    
    const x = e.pageX - container.offsetLeft;
    const walk = (x - startX) * 2; // Velocidade do arraste
    const newScrollLeft = scrollLeft - walk;
    
    // Calcular novo √≠ndice
    const newIndex = Math.round(newScrollLeft / itemWidth);
    if (newIndex >= 0 && newIndex < itemCount) {
      currentIndex = newIndex;
      const translateX = -currentIndex * itemWidth;
      track.style.transition = 'none';
      track.style.transform = `translateX(${translateX}px)`;
    }
  });
  
  // Eventos de touch para mobile
  container.addEventListener('touchstart', (e) => {
    isDragging = true;
    startX = e.touches[0].pageX - container.offsetLeft;
    scrollLeft = currentIndex * itemWidth;
    pauseCarousel();
  });
  
  container.addEventListener('touchend', () => {
    if (isDragging) {
      isDragging = false;
      resumeCarousel();
    }
  });
  
  container.addEventListener('touchmove', (e) => {
    if (!isDragging) return;
    e.preventDefault();
    
    const x = e.touches[0].pageX - container.offsetLeft;
    const walk = (x - startX) * 2;
    const newScrollLeft = scrollLeft - walk;
    
    const newIndex = Math.round(newScrollLeft / itemWidth);
    if (newIndex >= 0 && newIndex < itemCount) {
      currentIndex = newIndex;
      const translateX = -currentIndex * itemWidth;
      track.style.transition = 'none';
      track.style.transform = `translateX(${translateX}px)`;
    }
  });
  
  // Pausar quando hover
  container.addEventListener('mouseenter', pauseCarousel);
  container.addEventListener('mouseleave', resumeCarousel);
  
  // Iniciar anima√ß√£o
  moveCarousel();
  
  // Limpar anima√ß√£o quando a p√°gina for fechada
  window.addEventListener('beforeunload', () => {
    if (animationId) {
      clearTimeout(animationId);
    }
  });
  
  // Salvar refer√™ncia para controle
  storiesCarousel = {
    pause: pauseCarousel,
    resume: resumeCarousel,
    moveTo: (index) => {
      currentIndex = index;
      const translateX = -currentIndex * itemWidth;
      track.style.transform = `translateX(${translateX}px)`;
    }
  };
}

// --- AUTO-SCROLL BASEADO NA POSI√á√ÉO DO TOQUE ---
function initAutoScroll() {
  const scrollContainer = document.getElementById('stories-wrapper');
  let autoScroll = null;
  let direction = 0;
  let isTouching = false;

  // Para desktop - mouse hover nas bordas
  scrollContainer.addEventListener('mousemove', (e) => {
    if (isTouching) return;
   
    const { left, right, width } = scrollContainer.getBoundingClientRect();
    const x = e.clientX;
    const scrollSpeed = 3;
    const edgeThreshold = 80;

    clearInterval(autoScroll);

    const distanceLeft = x - left;
    const distanceRight = right - x;

    if (distanceLeft < edgeThreshold) {
      autoScroll = setInterval(() => {
        scrollContainer.scrollLeft -= scrollSpeed;
      }, 10);
    } else if (distanceRight < edgeThreshold) {
      autoScroll = setInterval(() => {
        scrollContainer.scrollLeft += scrollSpeed;
      }, 10);
    }
  });

  scrollContainer.addEventListener('mouseleave', () => {
    if (!isTouching) {
      clearInterval(autoScroll);
    }
  });

  // Para mobile - touch baseado na posi√ß√£o do dedo
  scrollContainer.addEventListener('touchstart', (e) => {
    isTouching = true;
    const touchX = e.touches[0].clientX;
    const screenWidth = window.innerWidth;
    const scrollSpeed = 1.5;

    direction = touchX < screenWidth / 2 ? -1 : 1;

    autoScroll = setInterval(() => {
      scrollContainer.scrollLeft += direction * scrollSpeed;
    }, 15);
  });

  scrollContainer.addEventListener('touchend', () => {
    isTouching = false;
    clearInterval(autoScroll);
  });

  scrollContainer.addEventListener('touchmove', (e) => {
    if (!isTouching) return;
   
    const touchX = e.touches[0].clientX;
    const screenWidth = window.innerWidth;
    const newDirection = touchX < screenWidth / 2 ? -1 : 1;
   
    if (newDirection !== direction) {
      direction = newDirection;
    }
  });
}

// --- FUN√á√ïES DO MENU HAMB√öRGUER ---
function initMenu() {
  const menuToggle = document.querySelector('.menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOverlay = document.getElementById('menu-overlay');

  function toggleMenu() {
    mobileMenu.classList.toggle('open');
    menuOverlay.classList.toggle('active');
   
    if (mobileMenu.classList.contains('open')) {
      document.body.style.overflow = 'hidden';
    } else {
      document.body.style.overflow = '';
    }
  }

  function closeMenu() {
    mobileMenu.classList.remove('open');
    menuOverlay.classList.remove('active');
    document.body.style.overflow = '';
  }

  // Event listeners
  menuToggle.addEventListener('click', toggleMenu);
  menuOverlay.addEventListener('click', closeMenu);

  // Fecha o menu quando clica em um link
  const menuLinks = mobileMenu.querySelectorAll('a');
  menuLinks.forEach(link => {
    link.addEventListener('click', closeMenu);
  });

  // Fecha o menu quando redimensiona a tela para desktop
  window.addEventListener('resize', () => {
    if (window.innerWidth > 768) {
      closeMenu();
    }
  });
}

// --- FUN√á√ïES DE BOLHAS ---

function generateBubbles() {
  bubbleContainer.innerHTML = '';
  activeBubbles = [];

  const containerRect = bubbleContainer.getBoundingClientRect();
  const minSize = 80;
  const maxSize = 180;
  const margin = 20;

  PROFILES_DATA.forEach(profile => {
    const size = Math.floor(Math.random() * (maxSize - minSize) + minSize);
    let validPosition = false;
    let x, y;
    let attempts = 0;

    while (!validPosition && attempts < 50) {
      x = Math.random() * (containerRect.width - size - 2 * margin) + margin;
      y = Math.random() * (containerRect.height - size - 2 * margin) + margin;
     
      let overlapping = activeBubbles.some(bubble => {
        const dx = x - bubble.x;
        const dy = y - bubble.y;
        const distance = Math.sqrt(dx * dx + dy * dy);
        return distance < (size / 2 + bubble.size / 2 + margin);
      });

      if (!overlapping) {
        validPosition = true;
      }
      attempts++;
    }
   
    const bubble = document.createElement('div');
    bubble.className = 'photo-bubble';
    bubble.style.width = `${size}px`;
    bubble.style.height = `${size}px`;
    bubble.style.left = `${x}px`;
    bubble.style.top = `${y}px`;
    bubble.setAttribute('data-profile-id', profile.id);
   
    const img = document.createElement('img');
    img.src = profile.image;
    img.alt = profile.name;
    bubble.appendChild(img);
   
    bubble.addEventListener('mousedown', handleBubbleMouseDown);
    bubble.addEventListener('touchstart', handleBubbleTouchStart);
    bubble.addEventListener('click', handleBubbleClick);
    bubbleContainer.appendChild(bubble);

    activeBubbles.push({
      element: bubble,
      id: profile.id,
      x: x,
      y: y,
      size: size,
      vx: (Math.random() - 0.5) * 0.3,
      vy: (Math.random() - 0.5) * 0.3,
      profile: profile,
      targetX: x,
      targetY: y,
      floatSpeed: 0.02 + Math.random() * 0.03,
      floatRadius: 20 + Math.random() * 30,
      floatAngle: Math.random() * Math.PI * 2,
      gravity: 0.001,
      bounce: 0.7,
      randomTargetX: x,
      randomTargetY: y,
      randomSpeed: 0.3 + Math.random() * 0.5,
      randomChangeTimer: 0,
      randomChangeInterval: 2000 + Math.random() * 3000,
      wanderRadius: 100 + Math.random() * 150,
      centerX: x,
      centerY: y
    });
  });
}

function handleBubbleClick(event) {
  if (isDragging || hasMoved) {
    return;
  }
 
  const bubbleElement = event.currentTarget;
  const profileId = parseInt(bubbleElement.getAttribute('data-profile-id'));
  const profileData = PROFILES_DATA.find(p => p.id === profileId);

  if (profileData) {
    bubbleElement.classList.add('burst');
   
    setTimeout(() => {
      bubbleElement.remove();
      activeBubbles = activeBubbles.filter(b => b.id !== profileId);
      checkEndGame();
    }, 300);

    openProfileModal(profileData);
  }
}

function openProfileModal(profile) {
  const profileWindow = document.getElementById('profile-window');
  const profileCarousel = document.getElementById('profile-carousel');
  const carouselNav = document.getElementById('carousel-nav');
 
  document.getElementById('profile-name').textContent = profile.name;
  document.getElementById('profile-phrase').textContent = profile.phrase;
 
  profileCarousel.innerHTML = '';
  carouselNav.innerHTML = '';
 
  // Coletar todas as imagens dispon√≠veis do perfil
  currentProfileImages = [profile.image];
  
  // Se h√° dados originais do Firebase, tentar adicionar mais imagens
  if (profile.originalData) {
    const originalData = profile.originalData;
    
    // Adicionar galeria de fotos se dispon√≠vel
    if (originalData.mediaFiles?.galeria && Array.isArray(originalData.mediaFiles.galeria)) {
      originalData.mediaFiles.galeria.forEach(img => {
        if (img && img !== profile.image) {
          currentProfileImages.push(img);
        }
      });
    }
    
    // Adicionar outras fotos se dispon√≠vel
    if (originalData.fotoPerfil && originalData.fotoPerfil !== profile.image) {
      currentProfileImages.push(originalData.fotoPerfil);
    }
  }
  
  // Criar carrossel com todas as imagens
  currentProfileImages.forEach((image, index) => {
    const carouselItem = document.createElement('div');
    carouselItem.className = 'carousel-item';
   
    const img = document.createElement('img');
    img.src = image;
    img.alt = `${profile.name} - Foto ${index + 1}`;
    img.onerror = () => {
      // Se a imagem falhar, usar placeholder
      img.src = `https://via.placeholder.com/300x400/FFB6C1/FFFFFF?text=${encodeURIComponent(profile.name)}`;
    };
   
    carouselItem.appendChild(img);
    profileCarousel.appendChild(carouselItem);
   
    const dot = document.createElement('div');
    dot.className = `carousel-dot ${index === 0 ? 'active' : ''}`;
    dot.setAttribute('data-index', index);
    dot.addEventListener('click', () => scrollToCarouselItem(index));
    carouselNav.appendChild(dot);
  });
  
  // Adicionar informa√ß√µes adicionais se dispon√≠vel
  addProfileDetails(profile);
 
  profileWindow.classList.add('show');
}

// Fun√ß√£o para adicionar detalhes do perfil
function addProfileDetails(profile) {
  const profileWindow = document.getElementById('profile-window');
  
  // Remover detalhes anteriores se existirem
  const existingDetails = profileWindow.querySelector('.profile-details');
  if (existingDetails) {
    existingDetails.remove();
  }
  
  // Criar se√ß√£o de detalhes
  const detailsSection = document.createElement('div');
  detailsSection.className = 'profile-details';
  detailsSection.style.cssText = `
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-light);
  `;
  
  let detailsHTML = '';
  
  // Informa√ß√µes b√°sicas
  if (profile.cidade && profile.estado) {
    detailsHTML += `
      <div style="margin-bottom: 0.5rem;">
        <strong>üìç Localiza√ß√£o:</strong> ${profile.cidade}, ${profile.estado}
      </div>
    `;
  }
  
  if (profile.preco_1h) {
    detailsHTML += `
      <div style="margin-bottom: 0.5rem;">
        <strong>üí∞ Pre√ßo 1h:</strong> R$ ${profile.preco_1h}
      </div>
    `;
  }
  
  if (profile.status) {
    detailsHTML += `
      <div style="margin-bottom: 0.5rem;">
        <strong>üìä Status:</strong> ${profile.status}
      </div>
    `;
  }
  
  if (profile.info) {
    detailsHTML += `
      <div style="margin-bottom: 0.5rem;">
        <strong>‚≠ê N√≠vel:</strong> ${profile.info}
      </div>
    `;
  }
  
  // Se h√° dados originais do Firebase, mostrar informa√ß√µes adicionais
  if (profile.originalData) {
    const originalData = profile.originalData;
    
    if (originalData.preco_30min) {
      detailsHTML += `
        <div style="margin-bottom: 0.5rem;">
          <strong>‚è∞ 30min:</strong> R$ ${originalData.preco_30min}
        </div>
      `;
    }
    
    if (originalData.preco_45min) {
      detailsHTML += `
        <div style="margin-bottom: 0.5rem;">
          <strong>‚è∞ 45min:</strong> R$ ${originalData.preco_45min}
        </div>
      `;
    }
    
    if (originalData.telefone) {
      detailsHTML += `
        <div style="margin-bottom: 0.5rem;">
          <strong>üìû Telefone:</strong> ${originalData.telefone}
        </div>
      `;
    }
    
    if (originalData.whatsapp) {
      detailsHTML += `
        <div style="margin-bottom: 0.5rem;">
          <strong>üí¨ WhatsApp:</strong> ${originalData.whatsapp}
        </div>
      `;
    }
  }
  
  if (detailsHTML) {
    detailsSection.innerHTML = `
      <h4 style="color: var(--primary-color); margin-bottom: 0.5rem; font-size: 1.1rem;">Informa√ß√µes do Perfil</h4>
      ${detailsHTML}
    `;
    profileWindow.appendChild(detailsSection);
  }
}

function scrollToCarouselItem(index) {
  const profileCarousel = document.getElementById('profile-carousel');
  const carouselNav = document.getElementById('carousel-nav');
 
  const carouselItems = profileCarousel.querySelectorAll('.carousel-item');
  if (carouselItems[index]) {
    carouselItems[index].scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'start' });
   
    const dots = carouselNav.querySelectorAll('.carousel-dot');
    dots.forEach((dot, i) => {
      dot.classList.toggle('active', i === index);
    });
  }
}

function closeProfileModal() {
  const profileWindow = document.getElementById('profile-window');
  profileWindow.classList.remove('show');
}

function checkEndGame() {
  if (activeBubbles.length === 1) {
    const lastBubble = activeBubbles[0].element;
    lastBubble.style.border = '5px solid gold';
    lastBubble.style.boxShadow = '0 0 20px gold';
    alert(`Parab√©ns! Resta apenas a ${activeBubbles[0].profile.name}.`);
  } else if (activeBubbles.length === 0) {
    showVictoryMessage();
  }
}

function showVictoryMessage() {
  const victoryOverlay = document.createElement('div');
  victoryOverlay.style.cssText = `
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 10000;
    color: white;
    font-family: 'Roboto', Arial, sans-serif;
    text-align: center;
    animation: fadeIn 0.5s ease-in;
  `;
 
  const style = document.createElement('style');
  style.textContent = `
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
      40% { transform: translateY(-10px); }
      60% { transform: translateY(-5px); }
    }
    .victory-bounce {
      animation: bounce 2s infinite;
    }
  `;
  document.head.appendChild(style);
 
  victoryOverlay.innerHTML = `
    <div style="font-size: 4rem; margin-bottom: 1rem;" class="victory-bounce">üéâ</div>
    <h1 style="font-size: 2.5rem; margin-bottom: 1rem; color: #e25352;">Parab√©ns!</h1>
    <p style="font-size: 1.2rem; margin-bottom: 2rem; max-width: 400px;">
      Voc√™ estourou todas as bolhas!<br>
      Voltando para a p√°gina inicial...
    </p>
    <div style="width: 200px; height: 4px; background: #333; border-radius: 2px; overflow: hidden;">
      <div id="progress-bar" style="width: 0%; height: 100%; background: #e25352; transition: width 2s ease;"></div>
    </div>
  `;
 
  document.body.appendChild(victoryOverlay);
 
  setTimeout(() => {
    const progressBar = document.getElementById('progress-bar');
    if (progressBar) {
      progressBar.style.width = '100%';
    }
  }, 100);
 
  setTimeout(() => {
    window.location.href = 'index.html';
  }, 2500);
}

// --- FUN√á√ïES DE ARRASTAR BOLHAS ---

function handleBubbleMouseDown(event) {
  event.preventDefault();
  startDrag(event.currentTarget, event.clientX, event.clientY);
}

function handleBubbleTouchStart(event) {
  event.preventDefault();
  const touch = event.touches[0];
  startDrag(event.currentTarget, touch.clientX, touch.clientY);
}

function startDrag(bubbleElement, clientX, clientY) {
  const profileId = parseInt(bubbleElement.getAttribute('data-profile-id'));
  draggedBubble = activeBubbles.find(b => b.id === profileId);
 
  if (!draggedBubble) return;

  isDragging = true;
  hasMoved = false;
  const rect = bubbleContainer.getBoundingClientRect();
 
  dragOffset.x = clientX - rect.left - draggedBubble.x;
  dragOffset.y = clientY - rect.top - draggedBubble.y;
 
  lastMousePos.x = clientX;
  lastMousePos.y = clientY;

  document.addEventListener('mousemove', handleDragMove);
  document.addEventListener('mouseup', handleDragEnd);
  document.addEventListener('touchmove', handleDragMove);
  document.addEventListener('touchend', handleDragEnd);

  bubbleElement.style.cursor = 'grabbing';
  bubbleElement.style.zIndex = '1000';
}

function handleDragMove(event) {
  if (!isDragging || !draggedBubble) return;

  event.preventDefault();
  const clientX = event.clientX || (event.touches && event.touches[0].clientX);
  const clientY = event.clientY || (event.touches && event.touches[0].clientY);
 
  const deltaX = clientX - lastMousePos.x;
  const deltaY = clientY - lastMousePos.y;
 
  const movementDistance = Math.sqrt(deltaX * deltaX + deltaY * deltaY);
  if (movementDistance > 5) {
    hasMoved = true;
  }
 
  const rect = bubbleContainer.getBoundingClientRect();
  const newX = clientX - rect.left - dragOffset.x;
  const newY = clientY - rect.top - dragOffset.y;
 
  draggedBubble.x = Math.max(draggedBubble.size/2, Math.min(rect.width - draggedBubble.size/2, newX));
  draggedBubble.y = Math.max(draggedBubble.size/2, Math.min(rect.height - draggedBubble.size/2, newY));
 
  draggedBubble.vx = deltaX * 0.1;
  draggedBubble.vy = deltaY * 0.1;
 
  affectNearbyBubbles(draggedBubble, deltaX, deltaY);
 
  lastMousePos.x = clientX;
  lastMousePos.y = clientY;
}

function handleDragEnd(event) {
  if (!isDragging || !draggedBubble) return;

  document.removeEventListener('mousemove', handleDragMove);
  document.removeEventListener('mouseup', handleDragEnd);
  document.removeEventListener('touchmove', handleDragMove);
  document.removeEventListener('touchend', handleDragEnd);

  draggedBubble.element.style.cursor = 'grab';
  draggedBubble.element.style.zIndex = 'auto';

  draggedBubble = null;
  isDragging = false;
 
  setTimeout(() => {
    hasMoved = false;
  }, 50);
}

function affectNearbyBubbles(draggedBubble, deltaX, deltaY) {
  const affectRadius = 150;
 
  activeBubbles.forEach(bubble => {
    if (bubble.id === draggedBubble.id) return;
   
    const dx = bubble.x - draggedBubble.x;
    const dy = bubble.y - draggedBubble.y;
    const distance = Math.sqrt(dx * dx + dy * dy);
   
    if (distance < affectRadius) {
      const force = (affectRadius - distance) / affectRadius;
      const angle = Math.atan2(dy, dx);
     
      const pushForce = force * 0.3;
      bubble.vx += Math.cos(angle) * pushForce;
      bubble.vy += Math.sin(angle) * pushForce;
     
      bubble.vx += (Math.random() - 0.5) * 0.1;
      bubble.vy += (Math.random() - 0.5) * 0.1;
    }
  });
}

// --- FUN√á√ïES DE MOVIMENTO / F√çSICA ---

function updateBubblePositions() {
  const containerRect = bubbleContainer.getBoundingClientRect();
  const time = Date.now() * 0.001;
  const deltaTime = 16;
 
  activeBubbles.forEach(bubble => {
    const radius = bubble.size / 2;
   
    if (bubble.id === draggedBubble?.id) {
      bubble.element.style.left = `${bubble.x - radius}px`;
      bubble.element.style.top = `${bubble.y - radius}px`;
      return;
    }
   
    bubble.randomChangeTimer += deltaTime;
   
    if (bubble.randomChangeTimer >= bubble.randomChangeInterval) {
      bubble.randomChangeTimer = 0;
      bubble.randomChangeInterval = 2000 + Math.random() * 3000;
     
      const angle = Math.random() * Math.PI * 2;
      const distance = Math.random() * bubble.wanderRadius;
      bubble.randomTargetX = bubble.centerX + Math.cos(angle) * distance;
      bubble.randomTargetY = bubble.centerY + Math.sin(angle) * distance;
     
      bubble.randomTargetX = Math.max(radius, Math.min(containerRect.width - radius, bubble.randomTargetX));
      bubble.randomTargetY = Math.max(radius, Math.min(containerRect.height - radius, bubble.randomTargetY));
    }
   
    const dx = bubble.randomTargetX - bubble.x;
    const dy = bubble.randomTargetY - bubble.y;
    const distance = Math.sqrt(dx * dx + dy * dy);
   
    if (distance > 5) {
      const moveX = (dx / distance) * bubble.randomSpeed * (deltaTime / 1000);
      const moveY = (dy / distance) * bubble.randomSpeed * (deltaTime / 1000);
      bubble.vx += moveX * 0.1;
      bubble.vy += moveY * 0.1;
    }
   
    bubble.floatAngle += bubble.floatSpeed;
    const floatX = Math.sin(bubble.floatAngle) * bubble.floatRadius;
    const floatY = Math.cos(bubble.floatAngle * 0.7) * bubble.floatRadius * 0.5;
   
    bubble.vy += bubble.gravity;
   
    bubble.x += bubble.vx;
    bubble.y += bubble.vy;
   
    const finalX = bubble.x + floatX;
    const finalY = bubble.y + floatY;
   
    let newX = finalX;
    let newY = finalY;
   
    if (finalX < radius) {
      newX = radius;
      bubble.vx = -bubble.vx * bubble.bounce;
      bubble.x = newX - floatX;
    } else if (finalX > containerRect.width - radius) {
      newX = containerRect.width - radius;
      bubble.vx = -bubble.vx * bubble.bounce;
      bubble.x = newX - floatX;
    }
   
    if (finalY < radius) {
      newY = radius;
      bubble.vy = -bubble.vy * bubble.bounce;
      bubble.y = newY - floatY;
    } else if (finalY > containerRect.height - radius) {
      newY = containerRect.height - radius;
      bubble.vy = -bubble.vy * bubble.bounce;
      bubble.y = newY - floatY;
    }
   
    bubble.vx *= 0.995;
    bubble.vy *= 0.995;
   
    if (Math.random() < 0.01) {
      bubble.vx += (Math.random() - 0.5) * 0.1;
      bubble.vy += (Math.random() - 0.5) * 0.1;
    }
   
    bubble.element.style.left = `${newX - radius}px`;
    bubble.element.style.top = `${newY - radius}px`;
   
    const rotation = Math.sin(time + bubble.id) * 2;
    bubble.element.style.transform = `rotate(${rotation}deg)`;
  });

  detectCollisions();
  bubbleMotionLoop = requestAnimationFrame(updateBubblePositions);
}

function detectCollisions() {
  for (let i = 0; i < activeBubbles.length; i++) {
    for (let j = i + 1; j < activeBubbles.length; j++) {
      const bubbleA = activeBubbles[i];
      const bubbleB = activeBubbles[j];
     
      if (bubbleA.id === draggedBubble?.id || bubbleB.id === draggedBubble?.id) {
        continue;
      }
     
      const dx = bubbleB.x - bubbleA.x;
      const dy = bubbleB.y - bubbleA.y;
      const distance = Math.sqrt(dx * dx + dy * dy);
      const minDistance = (bubbleA.size + bubbleB.size) / 2 + 8;
     
      if (distance < minDistance && distance > 0) {
        const angle = Math.atan2(dy, dx);
        const sin = Math.sin(angle);
        const cos = Math.cos(angle);
       
        const force = (minDistance - distance) * 0.015;
       
        bubbleA.vx -= cos * force;
        bubbleA.vy -= sin * force;
        bubbleB.vx += cos * force;
        bubbleB.vy += sin * force;
       
        const overlap = (minDistance - distance) * 0.4;
        bubbleA.x -= overlap * cos;
        bubbleA.y -= overlap * sin;
        bubbleB.x += overlap * cos;
        bubbleB.y += overlap * sin;
       
        bubbleA.vx += (Math.random() - 0.5) * 0.08;
        bubbleA.vy += (Math.random() - 0.5) * 0.08;
        bubbleB.vx += (Math.random() - 0.5) * 0.08;
        bubbleB.vy += (Math.random() - 0.5) * 0.08;
       
        const separation = 20;
        bubbleA.centerX -= cos * separation;
        bubbleA.centerY -= sin * separation;
        bubbleB.centerX += cos * separation;
        bubbleB.centerY += sin * separation;
      }
    }
  }
}

// Movimento por Aceler√¥metro (Mobile)
function handleDeviceOrientation(event) {
  const tiltX = event.gamma || 0;
  const tiltY = event.beta || 0;
  const sensitivity = 0.05;

  const normalizedTiltX = Math.max(-1, Math.min(1, tiltX / 90));
  const normalizedTiltY = Math.max(-1, Math.min(1, tiltY / 90));

  activeBubbles.forEach(bubble => {
    const forceX = normalizedTiltX * sensitivity * (bubble.size / 100);
    const forceY = normalizedTiltY * sensitivity * (bubble.size / 100);
   
    bubble.vx += forceX;
    bubble.vy += forceY;
   
    bubble.vx += (Math.random() - 0.5) * 0.01;
    bubble.vy += (Math.random() - 0.5) * 0.01;
  });
}

// Movimento por Bot√£o Chacoalhar (Desktop)
function handleShakeButton() {
  const shakeDuration = 1500;
 
  activeBubbles.forEach(bubble => {
    bubble.element.classList.add('shaking');
   
    const sizeFactor = bubble.size / 100;
    const impulse = 2 + Math.random() * 3;
   
    bubble.vx = (Math.random() - 0.5) * impulse * sizeFactor;
    bubble.vy = (Math.random() - 0.5) * impulse * sizeFactor;
   
    bubble.floatAngle += (Math.random() - 0.5) * Math.PI;
  });

  setTimeout(() => {
    activeBubbles.forEach(bubble => {
      bubble.element.classList.remove('shaking');
    });
  }, shakeDuration);
}

function redistributeBubbles() {
  const containerRect = bubbleContainer.getBoundingClientRect();
  const margin = 50;
 
  activeBubbles.forEach(bubble => {
    const newCenterX = margin + Math.random() * (containerRect.width - 2 * margin);
    const newCenterY = margin + Math.random() * (containerRect.height - 2 * margin);
   
    bubble.centerX = newCenterX;
    bubble.centerY = newCenterY;
   
    const angle = Math.random() * Math.PI * 2;
    const distance = Math.random() * bubble.wanderRadius;
    bubble.randomTargetX = newCenterX + Math.cos(angle) * distance;
    bubble.randomTargetY = newCenterY + Math.sin(angle) * distance;
   
    bubble.randomTargetX = Math.max(bubble.size/2, Math.min(containerRect.width - bubble.size/2, bubble.randomTargetX));
    bubble.randomTargetY = Math.max(bubble.size/2, Math.min(containerRect.height - bubble.size/2, bubble.randomTargetY));
  });
}

function initMotion() {
  if (isMobileDevice) {
    shakeButton.style.display = 'none';
   
    if (typeof DeviceOrientationEvent.requestPermission === 'function') {
      DeviceOrientationEvent.requestPermission()
        .then(response => {
          if (response === 'granted') {
            window.addEventListener('deviceorientation', handleDeviceOrientation, true);
            showAccelerometerStatus('Aceler√¥metro ativado! Incline o celular para mover as bolhas.');
          } else {
            showAccelerometerStatus('Aceler√¥metro n√£o autorizado. Use o toque para interagir.');
          }
        })
        .catch(() => {
          showAccelerometerStatus('Erro ao acessar aceler√¥metro. Use o toque para interagir.');
        });
    } else if (window.DeviceOrientationEvent) {
      window.addEventListener('deviceorientation', handleDeviceOrientation, true);
      showAccelerometerStatus('Aceler√¥metro ativado! Incline o celular para mover as bolhas.');
    } else {
      showAccelerometerStatus('Aceler√¥metro n√£o suportado. Use o toque para interagir.');
    }
  } else {
    shakeButton.addEventListener('click', handleShakeButton);
    console.log("Bot√£o de Chacoalhar ativado.");
  }
 
  setInterval(redistributeBubbles, 30000);
  updateBubblePositions();
}

function stopMotion() {
  if (bubbleMotionLoop) {
    cancelAnimationFrame(bubbleMotionLoop);
    bubbleMotionLoop = null;
  }
}

function showAccelerometerStatus(message) {
  const notification = document.createElement('div');
  notification.style.cssText = `
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-size: 0.9rem;
    z-index: 10000;
    text-align: center;
    max-width: 90%;
    animation: slideDown 0.3s ease-out;
  `;
 
  const style = document.createElement('style');
  style.textContent = `
    @keyframes slideDown {
      from { transform: translateX(-50%) translateY(-100%); opacity: 0; }
      to { transform: translateX(-50%) translateY(0); opacity: 1; }
    }
  `;
  document.head.appendChild(style);
 
  notification.textContent = message;
  document.body.appendChild(notification);
 
  setTimeout(() => {
    notification.style.animation = 'slideDown 0.3s ease-out reverse';
    setTimeout(() => {
      if (notification.parentNode) {
        notification.parentNode.removeChild(notification);
      }
    }, 300);
  }, 4000);
}

// Fun√ß√£o para buscar dados do perfil do banco de dados
async function carregarDadosPerfil(profileId) {
  try {
    console.log('üîç Buscando perfil com ID:', profileId);
    const apiBaseUrl = getApiBaseUrl();
    const response = await fetch(`${apiBaseUrl}/api/advertisements/${profileId}`);
    
    if (!response.ok) {
      throw new Error(`Erro ao buscar perfil: ${response.status}`);
    }
    
    const result = await response.json();
    console.log('üìä Dados do perfil recebidos:', result);
    
    if (result.success && result.data) {
      return result.data;
    } else if (result.data) {
      return result.data;
    } else {
      throw new Error('Dados do perfil n√£o encontrados');
    }
  } catch (error) {
    console.error('‚ùå Erro ao carregar dados do perfil:', error);
    throw error;
  }
}

// Fun√ß√£o para preencher a p√°gina com os dados do banco
function preencherDadosPerfil(dados) {
  console.log('üìù Preenchendo p√°gina com dados:', dados);
  
  // Banner
  if (dados.foto_banner) {
    const bannerFinal = document.getElementById('profile-banner-final');
    const bannerFinalBg = document.getElementById('profile-banner-final-bg');
    const bannerWrapper = document.getElementById('banner-final-wrapper');
    
    if (bannerFinal && bannerFinalBg && bannerWrapper) {
      bannerFinal.src = dados.foto_banner;
      bannerFinalBg.src = dados.foto_banner;
      bannerWrapper.style.display = 'block';
      bannerWrapper.style.opacity = '1';
    }
  }
  
  // Nome e localiza√ß√£o no banner
  const bannerNome = document.getElementById('banner-nome-text');
  const bannerLocation = document.getElementById('banner-location-text');
  const bannerOverlay = document.getElementById('banner-text-overlay');
  
  if (bannerNome) {
    bannerNome.textContent = dados.nome || dados.name || 'Nome n√£o informado';
  }
  
  if (bannerLocation) {
    const localizacao = [];
    if (dados.cidade) localizacao.push(dados.cidade);
    if (dados.estado) localizacao.push(dados.estado);
    if (dados.bairro) localizacao.push(dados.bairro);
    bannerLocation.textContent = localizacao.length > 0 ? localizacao.join(', ') : 'Localiza√ß√£o n√£o informada';
  }
  
  if (bannerOverlay) {
    bannerOverlay.style.display = 'block';
  }
  
  // Informa√ß√µes b√°sicas
  const infoLocalizacao = document.getElementById('info-localizacao');
  if (infoLocalizacao) {
    const localizacao = [];
    if (dados.cidade) localizacao.push(dados.cidade);
    if (dados.estado) localizacao.push(dados.estado);
    infoLocalizacao.textContent = localizacao.length > 0 ? localizacao.join(', ') : 'N√£o informado';
  }
  
  const infoDisponibilidade = document.getElementById('info-disponibilidade');
  if (infoDisponibilidade && dados.disponibilidade) {
    infoDisponibilidade.value = dados.disponibilidade;
  }
  
  const infoPreco = document.getElementById('info-preco-exibicao');
  if (infoPreco) {
    if (dados.preco_1h) {
      infoPreco.textContent = dados.preco_1h;
    } else if (dados.preco) {
      infoPreco.textContent = dados.preco;
    } else {
      infoPreco.textContent = 'A combinar';
    }
  }
  
  // Telefones
  const infoTelefoneCelular = document.getElementById('info-telefone-celular');
  const infoTelefoneFixo = document.getElementById('info-telefone-fixo');
  const btnLigarPhoneNumber = document.getElementById('btn-ligar-phone-number');
  
  if (infoTelefoneCelular && dados.telefone_celular) {
    infoTelefoneCelular.textContent = dados.telefone_celular;
  }
  
  if (infoTelefoneFixo && dados.telefone_fixo) {
    infoTelefoneFixo.textContent = dados.telefone_fixo;
  } else if (infoTelefoneFixo) {
    infoTelefoneFixo.textContent = '-';
  }
  
  if (btnLigarPhoneNumber && dados.telefone_celular) {
    btnLigarPhoneNumber.textContent = dados.telefone_celular.replace(/\D/g, '');
  }
  
  // Atualizar bot√µes de contato
  const btnLigarAgora = document.getElementById('btn-ligar-agora');
  const btnWhatsapp = document.getElementById('btn-whatsapp');
  
  if (btnLigarAgora && dados.telefone_celular) {
    const telLimpo = dados.telefone_celular.replace(/\D/g, '');
    btnLigarAgora.href = `tel:+55${telLimpo}`;
    btnLigarAgora.style.pointerEvents = 'auto';
    btnLigarAgora.style.opacity = '1';
  }
  
  if (btnWhatsapp && dados.telefone_celular) {
    const telLimpo = dados.telefone_celular.replace(/\D/g, '');
    btnWhatsapp.href = `https://wa.me/55${telLimpo}`;
    btnWhatsapp.style.pointerEvents = 'auto';
    btnWhatsapp.style.opacity = '1';
  }
  
  // Eu Fa√ßo
  const euFacoGrid = document.getElementById('eu-faco-grid');
  if (euFacoGrid && dados.eu_faco && Array.isArray(dados.eu_faco)) {
    euFacoGrid.querySelectorAll('.faco-item').forEach(item => {
      const facoValue = item.getAttribute('data-faco');
      if (dados.eu_faco.includes(facoValue)) {
        item.classList.add('active');
      }
    });
  }
  
  // Descri√ß√£o
  const descricaoPerfil = document.getElementById('descricao-perfil');
  const descricaoCharCount = document.getElementById('descricao-char-count');
  
  if (descricaoPerfil && dados.descricao) {
    descricaoPerfil.textContent = dados.descricao;
    if (descricaoCharCount) {
      descricaoCharCount.textContent = `${dados.descricao.length}/1500 caracteres`;
    }
  }
  
  // Servi√ßos (se houver se√ß√£o de servi√ßos)
  // Aqui voc√™ pode adicionar l√≥gica para preencher servi√ßos se necess√°rio
}

// --- INICIALIZA√á√ÉO ---
window.onload = async () => {
  // Mostrar loading state
  showLoadingState();
  
  try {
    // Verificar se h√° par√¢metro ID na URL (p√°gina de perfil individual)
    const urlParams = new URLSearchParams(window.location.search);
    const profileId = urlParams.get('id');
    const profileName = urlParams.get('name');
    
    if (profileId) {
      // Modo: P√°gina de perfil individual - buscar dados do banco
      console.log('üìÑ Modo: P√°gina de perfil individual');
      console.log('üÜî ID do perfil:', profileId);
      console.log('üë§ Nome do perfil:', profileName);
      
      try {
        const dadosPerfil = await carregarDadosPerfil(profileId);
        preencherDadosPerfil(dadosPerfil);
        console.log('‚úÖ Dados do perfil carregados e preenchidos com sucesso!');
      } catch (error) {
        console.error('‚ùå Erro ao carregar dados do perfil:', error);
        // Mostrar mensagem de erro
        const bannerNome = document.getElementById('banner-nome-text');
        if (bannerNome) {
          bannerNome.textContent = 'Erro ao carregar perfil';
        }
      }
    } else {
      // Modo: Lista de perfis - carregar dados est√°ticos
      console.log('üìã Modo: Lista de perfis');
      PROFILES_DATA = loadStaticProfiles();
      
      // Inicializar componentes
      initStories();
      initMenu();
      renderGallery();
    }
    
    // Esconder loading state
    hideLoadingState();
    
    console.log("‚úÖ P√°gina carregada com sucesso!");
    
  } catch (error) {
    console.error("‚ùå Erro ao inicializar p√°gina:", error);
    hideLoadingState();
    
    // Mesmo com erro, inicializar com dados de fallback
    initStories();
    initMenu();
    renderGallery();
  }
};

window.addEventListener('resize', renderGallery);

// Fun√ß√£o para mostrar estado de carregamento
function showLoadingState() {
  const loadingOverlay = document.createElement('div');
  loadingOverlay.id = 'loading-overlay';
  loadingOverlay.style.cssText = `
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.9);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 10000;
    font-family: 'Roboto', Arial, sans-serif;
  `;
  
  loadingOverlay.innerHTML = `
    <div style="text-align: center;">
      <div style="width: 50px; height: 50px; border: 4px solid #f3f3f3; border-top: 4px solid #e25352; border-radius: 50%; animation: spin 1s linear infinite; margin: 0 auto 20px;"></div>
      <h3 style="color: #e25352; margin-bottom: 10px;">Carregando perfis...</h3>
      <p style="color: #666; font-size: 14px;">Buscando dados do Firebase</p>
    </div>
  `;
  
  const style = document.createElement('style');
  style.textContent = `
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  `;
  document.head.appendChild(style);
  
  document.body.appendChild(loadingOverlay);
}

// Fun√ß√£o para esconder estado de carregamento
function hideLoadingState() {
  const loadingOverlay = document.getElementById('loading-overlay');
  if (loadingOverlay) {
    loadingOverlay.remove();
  }
}

// Fun√ß√£o para controlar o indicador de fonte de dados
function showDataSourceIndicator(message, type = "loading") {
  const indicator = document.getElementById('data-source-indicator');
  const text = document.getElementById('data-source-text');
  
  if (indicator && text) {
    text.textContent = message;
    indicator.className = `data-source-indicator ${type}`;
    indicator.style.display = 'block';
    
    // Auto-hide ap√≥s 5 segundos para mensagens de sucesso
    if (type === "success") {
      setTimeout(() => {
        indicator.style.display = 'none';
      }, 5000);
    }
  }
}

// Fun√ß√£o para esconder o indicador de fonte de dados
function hideDataSourceIndicator() {
  const indicator = document.getElementById('data-source-indicator');
  if (indicator) {
    indicator.style.display = 'none';
  }
}

