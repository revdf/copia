  <script>
// --- DADOS DOS PERFIS (Carregados do Firebase) ---
let PROFILES_DATA = [];

// Fun√ß√£o para detectar a porta correta automaticamente
function getApiBaseUrl() {
  // A API Firebase completa roda na porta 5000 por padr√£o
  // Se estamos na porta 5500 (Live Server), acessar API Firebase
  if (window.location.port === '5500' || window.location.port === '') {
    return `http://localhost:5000`; // API Firebase
  }
  // Se estamos na porta 8080 (Python server), acessar API Firebase
  else if (window.location.port === '8080') {
    return `http://localhost:5000`; // API Firebase
  }
  // Se estamos na porta 5000 (servidor Firebase), usar diretamente
  else if (window.location.port === '5000') {
    return `http://localhost:5000`;
  }
  // Fallback para porta 5000 (Firebase)
  else {
    return `http://localhost:5000`;
  }
}

// Fun√ß√£o para carregar dados reais do Firebase
