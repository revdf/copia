rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para a coleção 'anuncios'
    match /anuncios/{anuncioId} {
      // Permitir leitura pública (todos podem ler)
      allow read: if true;
      
      // Permitir escrita apenas para usuários autenticados
      allow create: if request.auth != null;
      // Permitir atualização pelo dono ou qualquer usuário autenticado (para incrementar views/likes)
      allow update: if request.auth != null;
      allow delete: if request.auth != null && 
                       (request.auth.uid == resource.data.userId || 
                        request.auth.uid == resource.data.advertiserId);
    }
    
    // Regras para a coleção 'advertisements'
    match /advertisements/{advertisementId} {
      // Permitir leitura pública (todos podem ler)
      allow read: if true;
      
      // Permitir escrita apenas para usuários autenticados
      allow create: if request.auth != null;
      // Permitir atualização por qualquer usuário autenticado (para incrementar views/likes)
      allow update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Regras para a coleção 'comentarios'
    match /comentarios/{comentarioId} {
      // Qualquer pessoa pode ler comentários aprovados
      allow read: if true;
      
      // Usuários autenticados podem criar comentários
      allow create: if request.auth != null;
      
      // Apenas o dono do anúncio ou admin pode atualizar (aprovar/rejeitar)
      allow update: if request.auth != null;
      
      // Apenas o dono do anúncio ou o autor pode deletar
      allow delete: if request.auth != null;
    }
    
    // Regras para a coleção 'anuncio_stats' (estatísticas de anúncios)
    match /anuncio_stats/{statId} {
      // Leitura pública
      allow read: if true;
      
      // Qualquer usuário autenticado pode criar/atualizar (incrementar views, likes, etc.)
      allow create, update: if request.auth != null;
      
      // Não permitir exclusão
      allow delete: if false;
    }
    
    // Regras para a coleção 'photo_likes' (likes em fotos)
    match /photo_likes/{likeId} {
      // Leitura pública
      allow read: if true;
      
      // Usuários autenticados podem criar likes
      allow create: if request.auth != null;
      
      // Usuários podem atualizar/deletar seus próprios likes
      allow update, delete: if request.auth != null;
    }
    
    // Regras para a coleção 'likes' (likes gerais)
    match /likes/{likeId} {
      // Leitura pública
      allow read: if true;
      
      // Usuários autenticados podem criar/deletar likes
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // Regras para a coleção 'photo_views' (visualizações de fotos)
    match /photo_views/{viewId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
    
    // Regras para outras coleções (users, payments, etc.)
    match /users/{userId} {
      // Usuários podem ler apenas seus próprios dados
      allow read: if request.auth != null && request.auth.uid == userId;
      // Usuários podem criar/atualizar apenas seus próprios dados
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Não permitir exclusão de usuários
    }
    
    match /payments/{paymentId} {
      // Apenas usuários autenticados podem ler seus próprios pagamentos
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      // Usuários podem criar sessões de pagamento
      allow create: if request.auth != null;
      // Apenas Cloud Functions podem atualizar (via service account)
      allow update, delete: if false;
    }
    
    // Coleção de invoices (faturas do Stripe)
    match /invoices/{invoiceId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }
    
    // Regras para a coleção 'advertisers'
    match /advertisers/{advertiserId} {
      // Permitir leitura para verificar CPF duplicado (apenas usuários autenticados)
      allow read: if request.auth != null;
      
      // Permitir criação apenas para o próprio usuário
      allow create: if request.auth != null && request.auth.uid == advertiserId;
      
      // Permitir atualização apenas do próprio documento
      allow update: if request.auth != null && request.auth.uid == advertiserId;
      
      // Não permitir exclusão
      allow delete: if false;
    }
    
    // Regras para a coleção 'clientes' (usuários cadastrados como clientes)
    match /clientes/{clienteId} {
      // Clientes podem ler apenas seus próprios dados
      allow read: if request.auth != null && request.auth.uid == clienteId;
      // Clientes podem criar/atualizar apenas seus próprios dados
      allow create: if request.auth != null && request.auth.uid == clienteId;
      allow update: if request.auth != null && request.auth.uid == clienteId;
      // Não permitir exclusão
      allow delete: if false;
    }
    
    // Regra padrão: negar acesso a todas as outras coleções
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
