rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // COLECÇÃO: anuncios
    // MODERAÇÃO: Usuário não pode alterar campo status
    // ============================================
    match /anuncios/{anuncioId} {
      // Leitura pública (necessário para carregar dados antes de checar status no frontend)
      allow read: if true;
      
      // Criação: usuário autenticado, status DEVE ser "pending_approval"
      allow create: if request.auth != null
                    && request.resource.data.status == 'pending_approval';
      
      // Atualização: 
      // - Admin (custom claim) pode alterar tudo (incluindo status)
      // - Qualquer autenticado pode atualizar DESDE QUE não mude o campo status
      allow update: if request.auth != null
                    && (
                      // Admin pode alterar tudo (incluindo status para aprovar/rejeitar)
                      request.auth.token.admin == true
                      ||
                      // Qualquer autenticado pode atualizar (views, likes, etc.) mas NÃO pode mudar status
                      request.resource.data.status == resource.data.status
                    );
      
      // Exclusão: apenas dono ou admin
      allow delete: if request.auth != null && 
                       (request.auth.uid == resource.data.userId || 
                        request.auth.uid == resource.data.advertiserId ||
                        request.auth.token.admin == true);
    }
    
    // ============================================
    // COLECÇÃO: advertisements
    // MODERAÇÃO: Usuário não pode alterar campo status
    // ============================================
    match /advertisements/{advertisementId} {
      // Leitura pública
      allow read: if true;
      
      // Criação: usuário autenticado, status DEVE ser "pending_approval"
      allow create: if request.auth != null
                    && request.resource.data.status == 'pending_approval';
      
      // Atualização:
      // - Admin pode alterar tudo (incluindo status para aprovar/rejeitar)
      // - Qualquer autenticado pode atualizar DESDE QUE não mude o campo status
      allow update: if request.auth != null
                    && (
                      request.auth.token.admin == true
                      ||
                      request.resource.data.status == resource.data.status
                    );
      
      // Exclusão: apenas dono ou admin
      allow delete: if request.auth != null 
                    && (request.auth.uid == resource.data.advertiserId 
                        || request.auth.token.admin == true);
    }
    
    // ============================================
    // COLECÇÃO: comentarios
    // ============================================
    match /comentarios/{comentarioId} {
      // Qualquer pessoa pode ler comentários aprovados
      allow read: if true;
      
      // Usuários autenticados podem criar comentários
      allow create: if request.auth != null;
      
      // Apenas o dono do anúncio ou admin pode atualizar (aprovar/rejeitar)
      allow update: if request.auth != null;
      
      // Apenas o dono do anúncio ou o autor pode deletar
      allow delete: if request.auth != null;
    }
    
    // ============================================
    // COLECÇÃO: anuncio_stats (estatísticas de anúncios)
    // ============================================
    match /anuncio_stats/{statId} {
      // Leitura pública
      allow read: if true;
      
      // Qualquer usuário autenticado pode criar/atualizar (incrementar views, likes, etc.)
      allow create, update: if request.auth != null;
      
      // Não permitir exclusão
      allow delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: photo_likes (likes em fotos)
    // ============================================
    match /photo_likes/{likeId} {
      // Leitura pública
      allow read: if true;
      
      // Usuários autenticados podem criar likes
      allow create: if request.auth != null;
      
      // Usuários podem atualizar/deletar seus próprios likes
      allow update, delete: if request.auth != null;
    }
    
    // ============================================
    // COLECÇÃO: likes (likes gerais)
    // ============================================
    match /likes/{likeId} {
      // Leitura pública
      allow read: if true;
      
      // Usuários autenticados podem criar/deletar likes
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // ============================================
    // COLECÇÃO: photo_views (visualizações de fotos)
    // ============================================
    match /photo_views/{viewId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: users
    // ============================================
    match /users/{userId} {
      // Usuários podem ler apenas seus próprios dados
      allow read: if request.auth != null && request.auth.uid == userId;
      // Usuários podem criar/atualizar apenas seus próprios dados
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: payments
    // ============================================
    match /payments/{paymentId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: invoices (faturas do Stripe)
    // ============================================
    match /invoices/{invoiceId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: advertisers (Cadastro de Anunciantes)
    // ============================================
    match /advertisers/{advertiserId} {
      // Leitura: qualquer usuário autenticado (para verificar CPF, role admin, etc.)
      allow read: if request.auth != null;
      
      // Criação: apenas para o próprio usuário
      allow create: if request.auth != null && request.auth.uid == advertiserId;
      
      // Atualização: próprio documento OU admin
      allow update: if request.auth != null 
                    && (request.auth.uid == advertiserId 
                        || request.auth.token.admin == true);
      
      // Não permitir exclusão
      allow delete: if false;
    }
    
    // ============================================
    // COLECÇÃO: clientes (usuários cadastrados como clientes)
    // ============================================
    match /clientes/{clienteId} {
      allow read: if request.auth != null && request.auth.uid == clienteId;
      allow create: if request.auth != null && request.auth.uid == clienteId;
      allow update: if request.auth != null && request.auth.uid == clienteId;
      allow delete: if false;
    }
    
    // ============================================
    // Regra padrão: negar acesso a todas as outras coleções
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
